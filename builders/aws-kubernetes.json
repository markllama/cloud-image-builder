{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": ""
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "us-east-1",
    "source_ami_filter": {
      "filters": {
        "virtualization-type": "hvm",
        "name": "CentOS Linux 7 x86_64 HVM EBS ENA*",
        "root-device-type": "ebs"
      },
      "owners": ["679593333241"],
      "most_recent": true
    },
    "instance_type": "t2.medium",
    "ssh_username": "centos",
    "ami_name": "kubernetes-base {{timestamp}}"
  }],
  "provisioners": [
    {
      "type": "file",
      "source": "./kubernetes.repo",
      "destination": "kubernetes.repo"
    },
    {
      "type": "file",
      "source": "./kubernetes-init.service",
      "destination": "kubernetes-init.service"
    },
    {
      "type": "file",
      "source": "./kubernetes-init.sh",
      "destination": "kubernetes-init.sh"
    },
    {
      "type": "file",
      "source": "./kubernetes.repo",
      "destination": "kubernetes.repo"
    },
    {
      "type": "shell",
      "inline":[
        "sudo mv ./kubernetes.repo /etc/yum.repos.d/kubernetes.repo",
        "sudo yum -y install firewalld",
        "sudo systemctl enable --now firewalld",
        "for PORT in 6443 2379 2380 10250 10251 10252 ; do sudo firewall-cmd --zone public --add-port ${PORT}/tcp ; sudo firewall-cmd --zone public --add-port ${PORT}/tcp --permanent ; done",
        "sudo yum -y install docker",
        "sudo systemctl enable --now docker",
        "sudo yum install -y kubelet kubeadm kubectl --disableexcludes=kubernetes",
        "sudo swapoff -a",
        "sudo setenforce 0",
        "sudo sed -i 's/^SELINUX=enforcing$/SELINUX=permissive/' /etc/selinux/config",
        "sudo kubeadm config images pull",
        "sudo mv kubernetes-init.sh /usr/local/bin/kubernetes-init.sh",
        "sudo chmod a+x /usr/local/bin/kubernetes-init.sh",
        "sudo mv kubernetes-init.service /usr/lib/systemd/system/kubernetes-init.service"
      ]
    }
  ]
}
